@page
@model RazorPizzeria.Pages.PizzaModel
@{
}
<div class="text-center">
    <div class="mainText">
        <h6 class="display-4 text-capitalize text-black">Our Great Selection Of Pizzas!</h6>
        <h6 class="mainSubtitle"> Choose one, or try our Pizza Builder! Then Order and you're Done!</h6>
        <h6 class="mainSubtitle">No need to give any of your details!</h6>
        <h6 class="mainSubtitle">We already know everything!</h6>
        <p class="smallText"><i>Only one pizza per order.</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img class="w-100" src="images/Pizzas/Create.png" />
                    </div>
                    <div class="col-8">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Pizza</h3>
                            <p style="text-align:left;">Make your own Pizza with our PizzaMaker</p>
                            <a class="btn btn-primary" style="float:left;" asp-area="" asp-page="/Forms/CustomPizza">Try Now</a>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
            <!--Will loop through each pizza in the database, find image by title, then format it into its own div-->
            @foreach (var pizza in Model.fakePizzaDB)
            {
                var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");
                <div class="col-4 mb-5">
                    <img src="@imagePath" class="w-100" asp-append-version="true" />
                    <!-- Asp-route sends the information to the asp page instead of using redirect to page -->
                    <a class="btn btn-primary mt-1" asp-area="" asp-page="/Checkout/CheckOut" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice">Get this Pizza!</a>
                    <br />
                </div>

            }
        </div>
    </div>
</div>

