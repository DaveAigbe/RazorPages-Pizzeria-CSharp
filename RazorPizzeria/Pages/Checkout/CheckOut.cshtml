@page
@model RazorPizzeria.Pages.Checkout.CheckoutModel
@{
}


<h1>Your Order!</h1>
@{
    // Create a variable imagePath that will change depending on the name of the Pizza entered
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <!--asp append true makes it so that when changed are made to the page it will automatically refresh-->
        <img src=@imagePath class="w-100" asp-append-version="true" />
        <!--use the (at)Model notation to get information from ViewModel, since individual object was not created like it was in CustomPizza-->
        <p>Your order for the @Model.PizzaName Pizza is ready!</p>
        <p>Total price for your order is: $@Model.PizzaPrice</p>
        <br/>
        <a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a> 
    </div>
</div>